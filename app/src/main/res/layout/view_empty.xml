<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/empty_error_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/empty_reason_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/minMargin"
        android:text="啊偶,加载失败了呢~" />

    <TextView
        android:id="@+id/empty_reason_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="可能是网络原因,不要紧张,点击空白处刷新。" />

    <ProgressBar
        android:id="@+id/empty_refresh_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

</RelativeLayout>