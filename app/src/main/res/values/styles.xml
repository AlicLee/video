<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/BarStyle</item>
        <item name="actionBarStyle">@style/BarStyle</item>
    </style>

    <style name="AppNoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red</item>
    </style>



    <!-- 继承AppCompat.ActionBar，覆盖background，titleTextStyle -->
    <style name="BarStyle" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="background">@color/colorPrimary</item>
        <item name="actionOverflowButtonStyle">@style/MyActionBarOverflowButtonStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionBarOverflowButtonStyle</item>
        <item name="actionButtonStyle">@style/MyActionButtonStyle</item>
        <item name="android:actionButtonStyle">@style/MyActionButtonStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/leftexit</item>
        <item name="homeAsUpIndicator">@drawable/leftexit</item>
    </style>

    <!-- 继承AppCompat.Title，覆盖textColor -->
    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="MyActionBarOverflowButtonStyle" parent="@style/Base.Widget.AppCompat.ActionButton.Overflow">
        <item name="background">@color/white</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="MyActionButtonStyle" parent="@style/Base.Widget.AppCompat.ActionButton">
        <item name="background">@color/white</item>
        <item name="android:background">@color/white</item>
    </style>
    <!--<style name="MySubTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">-->
    <!--<item name="textColor">@color/white</item>-->
    <!--</style>-->
    <declare-styleable name="ArcHeaderView">
        <attr name="startColor">@color/lightBlue</attr>
        <attr name="endColor">@color/blue</attr>
    </declare-styleable>

    <declare-styleable name="settingItem">
        <!-- 滑动按钮背景图片 -->
        <attr name="iconBg" format="reference" />
        <!-- 滑动块图片 -->
        <attr name="textName" format="string" />
        <!-- 设置当前的状态 -->
        <attr name="haveLine" format="boolean" />
    </declare-styleable>

    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/style_inner_map_dialog_animation</item>
    </style>

    <style name="style_inner_map_dialog_animation">
        <!--dialog的进出动画-->
        <item name="android:windowEnterAnimation">@anim/scale_alpha_to_enter</item>
        <item name="android:windowExitAnimation">@anim/scale_alpha_to_exit</item>
    </style>

    <declare-styleable name="LinearProgressView">
        <attr name="lp_paintWidth" format="dimension" />
        <attr name="lp_paintColor" format="color" />
        <attr name="lp_textSize" format="dimension" />
        <attr name="lp_bgPaintSize" format="dimension" />
        <attr name="lp_type" format="integer" />
        <attr name="lp_startColor" format="color" />
        <attr name="lp_endColor" format="color" />
    </declare-styleable>
</resources>
